<Window x:Class="OpenEasyN2N.view.PingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="连接测试工具" Height="420" Width="480"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="MenuBackground" Color="#252526"/>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="BtnBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="#1A1A1B" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1A1A1B" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="网络连接测试 (Ping / TCPing)" Foreground="#666666" FontSize="10" Margin="15,0" VerticalAlignment="Center"/>
                    <Button Style="{StaticResource CloseButtonStyle}" Content="✕" HorizontalAlignment="Right" Width="45" Foreground="Gray" Click="Close_Click"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="25,15">
                <StackPanel Orientation="Horizontal" Margin="5,0,0,12">
                    <RadioButton x:Name="RbPing" Content="ICMP" IsChecked="True" Foreground="#AAAAAA" Margin="0,0,20,0" FontSize="11"/>
                    <RadioButton x:Name="RbTcping" Content="TCPing" Foreground="#AAAAAA" Margin="0,0,20,0" FontSize="11"/>
                    <RadioButton x:Name="RbUdping" Content="UDPing" Foreground="#AAAAAA" FontSize="11"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="#252526" CornerRadius="5" Padding="12,6" BorderBrush="#333333" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="目标地址 (IP 或 域名)" FontSize="8" Foreground="#AAAAAA" Margin="0,0,0,2"/>
                            <TextBox x:Name="TargetInput" Style="{StaticResource ModernTextBox}" Tag="127.0.0.1:80">
                                <TextBox.ToolTip>输入 IP 或 域名 (TCPing 格式: ip:port)</TextBox.ToolTip>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <Button x:Name="BtnStart" Grid.Column="1" Style="{StaticResource ActionButtonStyle}"
                            Content="开始" Width="70" Height="38" Margin="10,0,0,0"
                            Background="{StaticResource AccentBrush}" Click="BtnStart_Click"/>

                    <Button x:Name="BtnStop" Grid.Column="2" Style="{StaticResource ActionButtonStyle}"
                            Content="停止" Width="70" Height="38" Margin="5,0,0,0"
                            Background="#444444" IsEnabled="False" Click="BtnStop_Click"/>
                </Grid>
            </StackPanel>

            <Border Grid.Row="2" Background="#121212" CornerRadius="10" Margin="25,5,25,25" BorderBrush="#2D2D30" BorderThickness="1">
                <Grid>
                    <TextBox x:Name="ResultOutput" IsReadOnly="True" Background="Transparent" BorderThickness="0"
                             Foreground="#00FF00" FontFamily="Consolas" FontSize="12" Padding="12"
                             VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap"
                             SelectionBrush="{StaticResource AccentBrush}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>